generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String    @id @default(cuid())
  name      String
  phone     String    @unique
  email     String    @unique
  bookings  Booking[] // Array of bookings associated with this customer
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
}